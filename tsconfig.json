{
  "compilerOptions": {
    "types": ["node"],
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true                              /* Specify what module code is generated. */                               /* Skip type checking all .d.ts files. */
  },
  "include": ["src"]
}
