generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id @id @default(uuid())
  email @unique
  senha String
  nome String
  redacoes Redacao[]
  criadoEm DateTime @default(now())
}
model Questao {
  id String @id @default(uuid())
  ano Int
  curso String
  materia String
  categoria String
  enunciado String
  alternativaA String
  alternativaB String
  alternativaC String
  alternativaD String
  alternativaE String
  respostaCorreta String
  peso Int

  simulados SimuladoQuestao[]
}

model Simulado {
  id String @id @default(uuid())
  nome String 
  curso String
  criadoEm DateTime @default(now())

  questoes SimuladoQuestao[]
}

model SimuladoQuestao {
  id String @id @default(uuid())
  questaoId String
  simuladoId String
  posicao Int

  questao Questao @relation(fields: [questaoId], references: [id])
  simulado Simulado @relation(fields: [simuladoId], references: [id])

  @@unique([simuladoId, posicao])
}

model Redacao {
  id String @id @default(uuid())
  usuarioId String
  conteudo String
  correcao String
  status String @default("pendente")
  criadoEm DateTime @default(now())

  usuario Usuario @relation(fields:[usuarioId], references[id])
  @@index([usuarioId])
}